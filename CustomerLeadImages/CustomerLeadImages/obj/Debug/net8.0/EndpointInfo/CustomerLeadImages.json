            "format": "int32"
          },
          "profileType": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "images": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProfileImage"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProfileImage": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "profileId": {
            "type": "integer",
            "format": "int32"
          },
          "imageData": {
            "type": "string",
            "nullable": true
          },
          "fileName": {
            "type": "string",
            "nullable": true
          },
          "contentType": {
            "type": "string",
            "nullable": true
          },
          "uploadedAt": {
            "type": "string",
            "format": "date-time"
          },
          "displayOrder": {
            "type": "integer",
            "format": "int32"
          },
          "isPriority": {
            "type": "boolean"
          },
          "profile": {
            "$ref": "#/components/schemas/Profile"
          }
        },
        "additionalProperties": false
      },
      "UploadImagesRequest": {
        "required": [
          "base64Images",
          "fileNames"
        ],
        "type": "object",
        "properties": {
          "base64Images": {
            "maxItems": 10,
            "minItems": 1,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "fileNames": {
            "maxItems": 10,
            "minItems": 1,
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
